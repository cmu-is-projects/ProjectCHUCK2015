<div class="container well">
<center><h1>Roster Spots</h1>
<%= link_to 'New Roster Spot', new_roster_spot_path %></center>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Team</th>
      <th>Student</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Position</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @roster_spots.each do |roster_spot| %>
      <tr>
        <td><%= roster_spot.team.name %></td>
        <td><%= roster_spot.student.proper_name %></td>
        <td><%= roster_spot.start_date %></td>
        <td><%= roster_spot.end_date %></td>
        <td><%= roster_spot.position %></td>
        <td><%= link_to(image_tag('edit.png'), edit_roster_spot_path(roster_spot)) %></td>
        <td><%= link_to(image_tag('delete.png'), roster_spot, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<span class="paginate">
<%= will_paginate @roster_spots, :previous_label => "Previous&nbsp;", :next_label => "&nbsp;Next" %>
</span>

</div>