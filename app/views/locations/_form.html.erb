<!DOCTYPE html> 
<%= simple_form_for(@location) do |f| %>
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
      <% @location.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :street %><br>
    <%= f.input_field :street, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.input_field :city, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :zip %><br>
    <%= f.input_field :zip, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :state %><br>
    <%= f.input_field :state, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :active %><br>
    <%= f.check_box :active, :class => "input-lg" %>
  </div>
  <div class="actions">
  <div class="row">
    <div class="col-sm-6">
      <%= link_to 'Cancel', locations_path, :class => 'btn btn-primary btn-lg outline' %>
    </div>
    <div class="col-sm-6">
      <%= f.submit nil, :class => 'btn btn-primary btn-lg outline' %>
    </div>
  </div>
</div>
<% end %>
