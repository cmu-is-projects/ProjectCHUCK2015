<%= simple_nested_form_for @household do |household_form| %>

<% if @household.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@household.errors.count, "error") %> prohibited this household from being saved:</h2>
  <ul>
    <% @household.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<center><h2>Participant Registration Form</h2></center> <br><br>

<fieldset>
  <div id = "accordion" class ="ui-accordion-content">
    <!-- <div class="row"> -->

    <!-- <div class="span7"> -->
    <h3>Step 1: Household Details</h3>
    <div class="well">
      <h3>General Household Information</h3>
      <%= render :partial => "household_fields", :locals => { :f => household_form } %>

      <hr>

      <h3>Parent(s)/Guardian(s) in this Household</h3>
      <%= household_form.simple_fields_for :guardians do |guardian_form| %>
      <%= render :partial => "guardian_fields", :locals => { :f => guardian_form } %>
      <% end %> 
      <p> <br /><br />
        <%= household_form.link_to_add "+ Add Another Parent/Guardian", :guardians %>
      </p><br /><br />

      <button class = "next"> Proceed to Step 2 </button>


    </div>
    <!-- </div>  -->

    <!-- <div class="span7">  -->

    <!-- </div> -->

    <!-- <div class="span7">  -->
    <h3>Step 2: Participant(s) Details</h3>
    <div id="household_students" class="well" class="ui-accordion-content">
      <%= household_form.simple_fields_for :students do |student_form| %>
      <%= render :partial => "student_fields", :locals => { :f => student_form } %>

      <!-- <legend>Registration</legend> -->
      <%#= student_form.simple_fields_for :registrations do |registration_form| %>
      <%#= render :partial => "registration_fields", :locals => { :f => registration_form } %>
      <%# end %> 

      <% end %> 

      <p>
       <%= household_form.link_to_add("+ Add Another Participant", :students) %>
     </p> <br /><br />


     <button class = "previous"> Return to Step 1 (if needed)</button>
   </div> 
   <!-- </div>  -->

   <!-- </div> -->
 </div>
</fieldset>

<br>

<div class="actions">
  <div class="row">
    <div class="col-sm-6">
      <%= household_form.submit "Final Step: Submit Registration", :class => 'btn btn-primary', data:{ confirm:"By submitting, you affirm that all information entered is accurate to the best of your knowledge. Upon submission, you will be redirected to a survey to complete."} %>
    </div>
    <div class="col-sm-6">
      <%= link_to 'Cancel Registration', "/home", :class => 'btn btn-primary', data:{ confirm:"Are you sure you want to cancel this form?"} %>
    </div>
  </div>
</div>

<% end %>

