<%= simple_form_for(@tournament) do |f| %>
  <% if @tournament.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

      <ul>
      <% @tournament.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label :name %><br>
    <%= f.input_field :name, :class => "input-lg" %>
  </div>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.input_field :description, :class => "input-lg" %>
  </div>

  <div class="field">
    <%= f.label :start_date %><br>
    <%= f.input_field :start_date, as: :date, :order =>[:month, :day, :year], :start_year => 14.years.ago.year, :end_year => Time.now.year, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :end_date %><br>
    <%= f.input_field :end_date, as: :date, :order =>[:month, :day, :year], :start_year => 14.years.ago.year, :end_year => Time.now.year, :class => "input-lg" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
