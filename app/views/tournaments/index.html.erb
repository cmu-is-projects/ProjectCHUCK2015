<div class="container">
  <h1>Tournaments</h1>
  <%= link_to 'New Tournament', new_tournament_path %>
  <br><br>

  <table class="table">
    <thead>
      <tr>
        <th>Start date</th>
        <th>End date</th>
        <!-- <th></th> -->
        <th></th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @tournaments.each do |tournament| %>
      <tr>
        <td><%= tournament.start_date %></td>
        <td><%= tournament.end_date %></td>
        <!-- <td><%#= link_to 'Show', tournament %></td> -->
        <td><%= link_to(image_tag('edit.png'), edit_tournament_path(tournament)) %></td>
        <td><%= link_to(image_tag('delete.png'), tournament, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
