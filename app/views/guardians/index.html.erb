<div class="container">
<h1>Guardians</h1>
<%= link_to 'New Guardian', new_guardian_path %>
<br><br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Relation</th>
      <th>Email</th>
      <th>Cell phone</th>
      <th>Receives text messages?</th>
      <!-- <th></th> -->
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @guardians.each do |guardian| %>
      <tr>
        <td><%= guardian.proper_name %></td>
        <!-- <td><%= guardian.relation %></td> -->
        <td><%= guardian.email %></td>
        <td><%= guardian.cell_phone %></td>
        <td><%= guardian.receives_text_msgs %></td>
        <!-- <td><%#= link_to 'Show', guardian %></td> -->
        <td><%= link_to(image_tag('edit.png'), edit_guardian_path(guardian)) %></td>
        <td><%= link_to(image_tag('delete.png'), guardian, method: :delete, data: { confirm: 'Are you sure?' }) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>