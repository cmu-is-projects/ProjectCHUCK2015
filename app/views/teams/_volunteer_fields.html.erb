
<center><h2>Coaches</h2>
<%= link_to 'Add Coach', assign_coach_path, :class => "noprint" %></center>
<br>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Position</th>
      <th>Email</th>
      <th>Cell phone</th>
      <th>Receives text messages?</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= link_to volunteer.proper_name, volunteer %></td>
        <td><%= volunteer.position %></td>
        <td><%= volunteer.email %></td>
        <td><%= volunteer.cell_phone %></td>
        <td>
      <% if volunteer.receives_text_msgs==true %>
        <%=link_to image_tag("check16.png")%>
      <% else %>
        <%=link_to image_tag("missing16.png")%>
      <% end %></td>
        <td class="noprint"><%= link_to(image_tag('edit.png'), edit_volunteer_path(volunteer)) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
