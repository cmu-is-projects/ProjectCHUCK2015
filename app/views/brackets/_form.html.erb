<%= simple_form_for(@bracket) do |f| %>
  <% if @bracket.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bracket.errors.count, "error") %> prohibited this bracket from being saved:</h2>

      <ul>
      <% @bracket.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :tournament_id %><br>
    <%= f.collection_select :tournament_id, Tournament.all, :id, :name, prompt: "Select tournament...", :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :gender %><br>
    <%= f.input_field :gender , :class => "input-lg"%>
  </div>
  <div class="field">
    <%= f.label :min_age %><br>
    <%= f.input_field :min_age, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :max_age %><br>
    <%= f.input_field :max_age, :class => "input-lg" %>
  </div>
  <div class="field">
    <%= f.label :max_students %><br>
    <%= f.input_field :max_students, :class => "input-lg" %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <%= link_to 'Back', brackets_path %>
  </div>
<% end %>
