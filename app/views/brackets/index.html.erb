<h1>Listing brackets</h1>

<table>
  <thead>
    <tr>
      <th>Tournament</th>
      <th>Gender</th>
      <th>Min age</th>
      <th>Max age</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @brackets.each do |bracket| %>
      <tr>
        <td><%= bracket.tournament_id %></td>
        <td><%= bracket.gender %></td>
        <td><%= bracket.min_age %></td>
        <td><%= bracket.max_age %></td>
        <td><%= link_to 'Show', bracket %></td>
        <td><%= link_to 'Edit', edit_bracket_path(bracket) %></td>
        <td><%= link_to 'Destroy', bracket, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

